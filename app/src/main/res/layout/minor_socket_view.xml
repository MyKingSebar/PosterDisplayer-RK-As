<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_minor_first_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="75dp"
        android:layout_marginTop="310dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_minor_first_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100dp"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="220dp"
        android:maxEms="6"
        android:text=""
        android:singleLine="false"
        android:gravity="center_vertical"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_minor_first_current_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="140dp"
        android:layout_marginTop="950dp"
        android:layout_marginLeft="200dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_minor_first_ready_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="140dp"
        android:layout_marginTop="1400dp"
        android:layout_marginLeft="200dp"
        android:gravity="center_horizontal"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_minor_first_ready_patient1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="1600dp"
        android:gravity="center_horizontal"
        android:textSize="140dp"
        android:text=""
        android:singleLine="true"
        android:textColor="@color/white" />

</FrameLayout>